{
    "build": {
        "html": "build/",
        "js": "build/public/js",
        "css": "build/public/style",
        "vendor": "build/build/js",
        "img" : "build/build/img"
    },
    "src": {
        "html": "src/*.html",
        "js": "src/**/*.js",
        "css": "src/**/*.scss",
        "img" : "src/**/img/**/*.*",
        "vendor": [
            "node_modules/angular/angular.min.js"
        ]
    },
    "watch": {
        "html": "src/*.html",
        "js": "src/**/*.js",
        "css": "src/**/*.scss",
        "img" : "src/**/img/**/*.*"
    }
}